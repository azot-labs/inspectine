{
  "name": "Streamyx",
  "version": "0.2.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["src/worker.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["src/content.js"],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "*://*/*",
    "clipboardWrite",
    "tabs",
    "webRequest",
    "activeTab",
    "storage",
    "webRequestBlocking",
    "notifications"
  ],
  "web_accessible_resources": ["src/drm.js"]
}
